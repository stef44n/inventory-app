<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Add New Car Model</title>
    </head>
    <body>
        <!-- Include the header for navigation -->
        <%- include('partials/header') %>

        <h1>Add New Car Model</h1>

        <!-- Form for adding a new car model -->
        <form action="/models" method="POST">
            <label for="model_name">Model Name:</label>
            <input type="text" id="model_name" name="model_name" required />

            <label for="make_id">Select Make:</label>
            <select id="make_id" name="make_id" required>
                <% makes.forEach(make => { %>
                <option value="<%= make.make_id %>">
                    <%= make.make_name %>
                </option>
                <% }) %>
            </select>

            <button type="submit">Add Car Model</button>
        </form>

        <!-- Link to go back to the list of car models -->
        <p><a href="/models">Back to Car Models</a></p>
    </body>
</html>
