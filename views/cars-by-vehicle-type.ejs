<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Cars by Vehicle Type</title>
    </head>
    <body>
        <!-- Include the header for navigation -->
        <%- include('partials/header') %>

        <h1>Cars in the <%= vehicleType.vehicle_type_name %> Category</h1>

        <ul>
            <% cars.forEach(car => { %>
            <li>
                <a href="/cars/<%= car.car_id %>"
                    ><strong><%= car.make_name %> <%= car.model_name %></strong>
                    - <%= car.yr %> (<%= car.license_plate %>)</a
                >
            </li>
            <% }) %>
        </ul>

        <!-- Edit Vehicle Type Button -->
        <a href="/vehicle-types/<%= vehicleType.vehicle_type_id %>/edit">
            <button>Edit Vehicle Type</button>
        </a>

        <!-- Delete Vehicle Type Button -->
        <form
            action="/vehicle-types/<%= vehicleType.vehicle_type_id %>?_method=DELETE"
            method="POST"
            style="display: inline"
        >
            <input
                type="password"
                name="password"
                placeholder="Enter password"
                required
            />
            <button
                type="submit"
                onclick="return confirm('Are you sure you want to delete this vehicle type and all associated cars?');"
            >
                Delete Vehicle Type
            </button>
        </form>

        <!-- Back to Vehicle Types -->
        <p><a href="/vehicle-types">Back to Vehicle Types</a></p>
    </body>
</html>
